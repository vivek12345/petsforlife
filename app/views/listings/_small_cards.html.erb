<div class="ui segment centersegment" ng-show="layout=='grid'">
  <div ng-show="layout=='grid'" class="grid">
    <!--start of active tab-->
    <div class="ui four doubling link cards small_cards active tab" ng-init="init(<%=@listings.to_json(:include=>[:photos,:user =>{:include => :favourites}]) %>,<%=@favourite.to_json(:include=>:photos) %>,<%=@user_listing.to_json(:include=>:photos) %>,<%=@layoutType%>)" data-tab="all">
      <div class="card" ng-repeat="listing in genListings | filter:{'gender':listing1.gender,'pet_type':listing1.pet_type,'breed_type':listing1.breed_type}:true">
        <div class="content small_card_content">
          <!--i class="right floated like icon"></i-->
          <%if current_user%>
            <div class="right floated ui huge star rating" id="{{listing.id}}" ng-click="toggleFav(favMarked=!favMarked,listing.id)">
                <i class="icon icon_{{listing.id}}"></i>
            </div>

            <%!if request.fullpath=='/'%>
              <div class="right floated" ng-show="listing.user_id==<%=current_user.id%>">
                <i class="circular inverted blue trash icon" ng-click="removeListing(listing.id)"></i>
              </div>
            <%end%>
          <%else%>
            <div class="right floated ui large star rating no_user" data-content="You need to login to add to favourites" data-variation="large">
              <i class="icon"></i>
            </div>
          <%end%>

          
          <%=link_to '{{listing.title}}','/listings/{{listing.id}}',class:'header'%>

          <div class="description">
            <div class="image">
              <a href="/listings/{{listing.id}}">
              <img ng-src='{{listing.photos[0].file_name.url}}' class:'ui medium image list_image' style="max-width:100%;height:169px;width:100%;" ng-show="listing.photos[0]">
              <%=image_tag 'missing.png',class:'ui medium image list_image',style:'max-width:100%;height:169px;width:100%;',:"ng-show"=>"!listing.photos[0]"%></a>
            </div>
            <div class="ui blue right ribbon label listing_price">
              <i class="rupee icon"></i>{{listing.price}}
            </div>
          </div>

          <div class="description pet_love">
            <p>
            {{listing.love_for_pets | limitTo:300}}....(continued)
            </p>
            <!-- <a class="ui teal label">
              <i class="checkmark icon"></i>
                Verified
            </a> -->
          </div>
        </div>
        <div class="extra content">
          <span class="ui circular facebook icon button" ng-click="shareFb(listing)">
            <i class="facebook icon"></i>
          </span> 
          <div class="right floated author">
            <%=image_tag 'pets.png',class:"ui avatar image small"%> 
            <a href="/users/{{listing.user.id}}">{{listing.user.username}}</a>
          </div>
        </div>
      </div>
    </div>
    <!-- end of active tab-->
    
  </div>
</div>