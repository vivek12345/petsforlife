<div class="ui inverted blue menu">
  <div class="header item">
  <%=link_to 'PetZoned',root_url%></div>
  <%if request.fullpath!='/'%>
    <%if request.fullpath == '/listings'%>
      <input type="text" class="search-query mobile item" placeholder="Search listing" name="query" ng-model="listing2.query">
    <%else%>
     <div class="ui category search-query mobile item">
        <%=render 'layouts/search'%>
      </div>
    <%end%>
  <%end%>
  <div class="right menu">
    <div class="ui mobile dropdown link item">
      Menu
      <i class="dropdown icon"></i>
      <div class="ui vertical menu">
        <%=link_to 'Create Listing',new_listing_path,class:"active teal item"%>
        <%=link_to 'Members',users_path,class:'item'%>
        <%=link_to 'Listings',listings_path,class:'item'%>
        <% if current_user%>
          <div class="ui accordion item user_profile">
            <div class="title">
              <i class="user icon"></i>
              <%=current_user.username%>
            </div>
            <div class="content">
              <%=link_to 'View Profile',current_user,class:'item'%>
              <%=link_to 'Edit Profile',edit_user_path(current_user),class:'item'%>
              <%=link_to 'Logout',logout_path,class:'item'%>
            </div>
          </div>
        <%else%>
          <%=link_to 'Login',login_path,class:'item'%>
          <%=link_to 'Register',signup_path,class:'item'%>
        <%end%>
      </div>
    </div>
     <%if request.fullpath!='/'%>
      <%if request.fullpath == '/listings'%>
        <input type="text" class="search-query item" placeholder="Search listing" name="query" ng-model="listing2.query">
      <%else%>
       <div class="ui category search_query item">
          <%=render 'layouts/search'%>
        </div>
      <%end%>
    <%end%>
    <%=link_to 'Create Listing',new_listing_path,class:'item'%>
    <%=link_to 'Breeders',users_path,class:'item'%>
    <%=link_to 'Listings',listings_path,class:'item'%>
    <% if current_user%>
      <div class="ui dropdown link item">
        <i class="user icon"></i> <%=current_user.username%>
        <i class="dropdown icon"></i>
        <div class="menu">
          <%=link_to 'View Profile',current_user,class:'item'%><i class="write icon"></i>
          <%=link_to 'Edit Profile',edit_user_path(current_user),class:'item'%><i class="edit icon"></i>
          <%=link_to 'Logout',logout_path,class:'item'%><i class="sign out icon"></i>
        </div>
      </div>
    <%else%>
      <%=link_to 'Login',login_path,class:'item'%>
      <%=link_to 'Register',signup_path,class:'item'%>
    <%end%>
  </div>
</div>

