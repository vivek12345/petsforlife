<div class="ui padded page grid login_page">
    <div class="ui eight wide column new_creation">
        <%flash.each do |key,value| %>
            <div class="ui <%=key %> message"><%=value %></div>
        <%end%>
        <%=form_for @user_session, :html=> { class:'ui form centered black stacked segment'} do |f|%>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="ui blue ribbon label">
                <i class="signup icon"></i> Login
            </div>
            
            <h2 class="ui header">
                <i class="user icon"></i>
                <div class="content">
                    Login 
                </div>
            </h2>
            
            <div class="field">
                <label>Username/Email</label>  
                <%=f.text_field :username,placeholder:'Username or Email' %>
            </div>
            <div class="field">
                <label>Password</label>
                <%=f.password_field :password,placeholder:'Password'%>
            </div>
            <div class="ui hidden divider"></div>
            <div class="ui buttons">
                <%=f.submit 'Login',class:'ui button login_user'%>
                <div class="or"></div>
                <a href="/auth/facebook">
                    <div class="ui facebook button">
                        <i class="facebook icon"></i>
                        Facebook
                    </div>
                </a>

            </div>
            <p><%=link_to 'Forgot Password?',new_password_reset_path%></p>
            <p>Donâ€™t have an account? <%=link_to 'Create a petzoned account',signup_path%></p>
            
        <%end%>
    </div>
    <div class="ui eight wide column new_creation">
        <div class="ui message">
          <div class="header">
            Perks of being a registered user
          </div>
          <ul class="list">
             <li>You can edit/delete your listings</li>
            <li>You can contact other members</li>
            <li>Mobile number and email number presence increases your chances of finding the right person for your listing</li>
            <li>You can view the listings you posted in a separate tab and the activity on that</li>
          </ul>
        </div>
    </div>
</div>

            
